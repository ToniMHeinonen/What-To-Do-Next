<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:src="@drawable/header"/>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:background="@drawable/custom_bg"
        android:layout_marginLeft="@dimen/margin_for_layouts"
        android:layout_marginRight="@dimen/margin_for_layouts"
        android:layout_marginBottom="@dimen/margin_for_layouts">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <Button
                android:id="@+id/voteButton"
                style="@style/menuButtons"
                android:text="@string/menu_vote" />

            <Button
                android:id="@+id/listButton"
                style="@style/menuButtons"
                android:text="@string/menu_lists" />

            <Button
                android:id="@+id/settingsButton"
                style="@style/menuButtons"
                android:text="@string/menu_settings" />
        </LinearLayout>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/button_selector"
            android:text="@string/logout"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_margin="10dp"
            android:onClick="logOutClicked"/>

    </LinearLayout>

</LinearLayout>