<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/results_list_padding"
        android:paddingRight="@dimen/results_list_padding">

        <TextView
            style="@style/resultsTopicValues"
            android:layout_weight="@dimen/results_name_weight"
            android:text="@string/results_name"/>

        <TextView
            style="@style/resultsTopicPoints"
            android:layout_weight="@dimen/results_points_weight"
            android:text="@string/results_total" />

        <TextView
            style="@style/resultsTopicPoints"
            android:layout_weight="@dimen/results_points_weight"
            android:text="@string/results_extra" />

    </LinearLayout>

    <ListView
        android:id = "@+id/resultItems"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"/>

</LinearLayout>