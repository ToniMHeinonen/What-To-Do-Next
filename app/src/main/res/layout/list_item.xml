<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background">

    <TextView
        android:id="@+id/name"
        style="@style/listItemValues"
        android:layout_weight="@dimen/list_name_weight">
    </TextView>

    <TextView
        android:id="@+id/total"
        style="@style/listItemPoints"
        android:layout_weight="@dimen/list_points_weight">
    </TextView>

    <TextView
        android:id="@+id/bonus"
        style="@style/listItemPoints"
        android:layout_weight="@dimen/list_points_weight">
    </TextView>

    <TextView
        android:id="@+id/peril"
        style="@style/listItemPoints"
        android:layout_weight="@dimen/list_points_weight">
    </TextView>

</LinearLayout>