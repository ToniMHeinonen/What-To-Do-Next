<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="450dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#DDD">

        <EditText
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Item name"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <!-- BONUS -->
        <TextView
            style="@style/listItemPointTypes"
            android:text="@string/list_item_dialog_bonus"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bonusMinus"
                style="@style/listItemSigns"
                android:text="-" />

            <EditText
                android:id="@+id/bonusPoints"
                style="@style/listItemNumbers"
                android:text="0"/>

            <Button
                android:id="@+id/bonusPlus"
                style="@style/listItemSigns"
                android:text="+" />
        </LinearLayout>

        <!-- PERIL -->
        <TextView
            style="@style/listItemPointTypes"
            android:text="@string/list_item_dialog_peril"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/perilMinus"
                style="@style/listItemSigns"
                android:text="-" />

            <EditText
                android:id="@+id/perilPoints"
                style="@style/listItemNumbers"
                android:text="0"/>

            <Button
                android:id="@+id/perilPlus"
                style="@style/listItemSigns"
                android:text="+" />
        </LinearLayout>

        <!-- CONFIRM & CANCEL-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/cancel"
                style="@style/listItemConfirmCancel"
                android:text="Cancel"
                android:background="#F00" />

            <Button
                android:id="@+id/confirm"
                style="@style/listItemConfirmCancel"
                android:text="Confirm"
                android:background="#0F0" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>