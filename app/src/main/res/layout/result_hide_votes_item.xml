<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/resultsListAndItemLayout"
    android:background="@drawable/vert_result_item_bg">

    <TextView
        android:id="@+id/resultsName"
        style="@style/resultsItemValues"
        android:text="Name"
        android:layout_weight="@dimen/results_name_weight">
    </TextView>

    <TextView
        android:id="@+id/resultsVotePoints"
        style="@style/resultsItemPoints"
        android:text="12"
        android:layout_weight="@dimen/results_points_weight">
    </TextView>

    <TextView
        android:id="@+id/resultsBonus"
        style="@style/resultsItemPoints"
        android:text="3"
        android:layout_weight="@dimen/results_points_weight">
    </TextView>

</LinearLayout>