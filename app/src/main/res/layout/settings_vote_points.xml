<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/first_vote"
        android:textColor="@color/defaultTextColor"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/small_caps_font"/>

    <LinearLayout
        style="@style/settingsOptionAdjustments"
        android:visibility="visible"
        android:orientation="horizontal">

        <Button
            android:id="@+id/firstMinus"
            style="@style/listItemSigns"
            android:text="-" />

        <EditText
            android:id="@+id/firstPoints"
            style="@style/listItemNumbers"
            android:text="0"
            android:gravity="center"/>

        <Button
            android:id="@+id/firstPlus"
            style="@style/listItemSigns"
            android:text="+" />
    </LinearLayout>

    <TextView
        android:id="@+id/settingTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/last_vote"
        android:textColor="@color/defaultTextColor"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/small_caps_font"/>

    <LinearLayout
        style="@style/settingsOptionAdjustments"
        android:visibility="visible"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lastMinus"
            style="@style/listItemSigns"
            android:text="-" />

        <EditText
            android:id="@+id/lastPoints"
            style="@style/listItemNumbers"
            android:text="0"
            android:gravity="center"/>

        <Button
            android:id="@+id/lastPlus"
            style="@style/listItemSigns"
            android:text="+" />
    </LinearLayout>

</LinearLayout>