<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/resultsListAndItemLayout"
    android:background="@drawable/vert_result_item_bg">

    <TextView
        android:id="@+id/resultsPosition"
        style="@style/resultsItemPoints"
        android:layout_weight="@dimen/saved_result_points_weight">
    </TextView>

    <TextView
        android:id="@+id/resultsName"
        style="@style/resultsItemValues"
        android:layout_weight="@dimen/saved_result_name_weight">
    </TextView>

    <TextView
        android:id="@+id/resultsBonus"
        style="@style/resultsItemPoints"
        android:layout_weight="@dimen/saved_result_points_weight">
    </TextView>

    <TextView
        android:id="@+id/resultsPeril"
        style="@style/resultsItemPoints"
        android:layout_weight="@dimen/saved_result_points_weight">
    </TextView>

</LinearLayout>