<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/results_list_padding"
            android:paddingRight="@dimen/results_list_padding">

            <TextView
                android:layout_width="@dimen/results_show_votes_name_width"
                android:layout_height="wrap_content"
                android:text="@string/results_name"
                android:textSize="20sp"
                android:textColor="@color/defaultTextColor"/>

            <TextView
                android:layout_width="@dimen/results_show_votes_points_width"
                android:layout_height="wrap_content"
                android:text="@string/results_extra"
                android:textSize="20sp"
                android:textColor="@color/defaultTextColor"
                android:textAlignment="center" />

            <TextView
                android:layout_width="@dimen/results_show_votes_points_width"
                android:layout_height="wrap_content"
                android:text="@string/results_total"
                android:textSize="20sp"
                android:textColor="@color/defaultTextColor"
                android:textAlignment="center"/>

        </LinearLayout>

        <ListView
            android:id = "@+id/resultItems"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"/>

    </LinearLayout>

</HorizontalScrollView>