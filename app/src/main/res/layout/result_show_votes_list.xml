<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topicLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/results_list_padding"
            android:paddingRight="@dimen/results_list_padding">

            <TextView
                style="@style/resultsTopicValues"
                android:layout_width="@dimen/results_show_votes_name_width"
                android:text="@string/results_name"/>

            <TextView
                style="@style/resultsTopicPoints"
                android:layout_width="@dimen/results_show_votes_points_width"
                android:text="@string/results_extra" />

            <TextView
                style="@style/resultsTopicPoints"
                android:layout_width="@dimen/results_show_votes_points_width"
                android:text="@string/results_total" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

    </LinearLayout>

</HorizontalScrollView>