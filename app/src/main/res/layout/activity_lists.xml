<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListsActivity"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/app_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_bg">

        <Button
            android:id="@+id/addButton"
            style="@style/listsButtons"
            android:text="@string/lists_add"
            android:onClick="addClicked"/>

        <Button
            android:id="@+id/listButton"
            style="@style/listsButtons"
            android:text="@string/lists_list"
            android:onClick="listClicked"/>

        <Button
            android:id="@+id/backButton"
            style="@style/listsButtons"
            android:text="@string/lists_back"
            android:onClick="backClicked"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/no_list"
            style="@style/listName" />

        <EditText
            android:id="@+id/selected_list"
            style="@style/listName"
            android:visibility="gone"/>

        <Button
            android:id="@+id/fallenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lists_fallen"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_selector"
            android:onClick="fallenClicked"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/name"
            style="@style/listsTopicsName"/>

        <TextView
            android:id="@+id/total"
            style="@style/listsTopicsPoints"
            android:text="@string/lists_total"/>

        <TextView
            android:id="@+id/bonus"
            style="@style/listsTopicsPoints"
            android:text="@string/lists_bonus"/>

        <TextView
            android:id="@+id/peril"
            style="@style/listsTopicsPoints"
            android:text="@string/lists_peril"/>

    </LinearLayout>

    <RelativeLayout
        style="@style/GenericProgressBackground"
        android:id="@+id/loadingPanel">

        <ProgressBar
            style="@style/GenericProgressIndicator"/>
    </RelativeLayout>

    <ListView
        android:id = "@+id/list"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:background="@drawable/custom_bg"/>

</LinearLayout>