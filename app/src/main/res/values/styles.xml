<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="menuButtons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:onClick">menuButtonClicked</item>
    </style>

    <style name="listsButtons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Loading icon -->
    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <!-- LISTS_ACTIVITY-->
    <style name="listsTopics">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">@dimen/list_points_weight</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:onClick">topicClicked</item>
    </style>

    <style name="listsTopicsName" parent="listsTopics">
        <item name="android:text">@string/lists_name</item>
        <item name="android:layout_weight">@dimen/list_name_weight</item>
    </style>

    <style name="listsTopicsPoints" parent="listsTopics">
        <item name="android:layout_weight">@dimen/list_points_weight</item>

    </style>

</resources>
