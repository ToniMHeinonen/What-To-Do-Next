<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:listViewStyle">@style/listViewStyle</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="listViewStyle" parent="Widget.AppCompat.ListView">
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">24dp</item>
        <item name="android:scrollbarThumbVertical">@drawable/custom_scroll_bar</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="resultListViewStyle" parent="listViewStyle">
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="NestedScrollBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbarFadeDuration">2</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fillViewport">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">24dp</item>
        <item name="android:scrollbarThumbVertical">@drawable/custom_scroll_bar</item>
    </style>

    <style name="horizontalScrollViewStyle">
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">24dp</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/custom_scroll_bar</item>
    </style>

    <style name="scrollViewStyle" parent="Widget.AppCompat.ListView">
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">24dp</item>
        <item name="android:scrollbarThumbVertical">@drawable/custom_scroll_bar</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:gravity">left</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
    </style>

    <style name="menuButtons"> <!-- MODIFIED IN LANDSCAPE -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:onClick">menuButtonClicked</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <!-- SPINNER -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="spinnerLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="spinnerElement">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textAlignment">center</item>
        <item name="android:popupBackground">@drawable/button_selector</item>
    </style>

    <!-- BUTTONS WITH TEXT AND IMAGE -->
    <style name="iconButtonLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:onClick">menuButtonClicked</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="iconButtonText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="iconButtonTextSmaller" parent="iconButtonText">
        <item name="android:layout_weight">0.7</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="iconButtonImage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="iconButtonImageSmaller">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- GLOBAL -->
    <style name="closeButtonLinear">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:src">@drawable/close_button_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="closeButtonRelative" parent="closeButtonLinear">
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <!-- REGISTRATION -->
    <style name="registrationLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/custom_bg</item>
    </style>

    <style name="registrationButtons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="registrationOrText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:text">@string/or_text</item>
    </style>

    <style name="showPassword">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:checked">false</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:text">@string/show_password</item>
        <item name="android:onClick">showPassword</item>
    </style>

    <style name="emailView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/email_hint</item>
    </style>

    <style name="passwordView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:hint">@string/login_password_hint</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <!-- LIST AND PROFILE -->
    <style name="listAndProfile">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <!-- LOADING ICON -->
    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <!-- Custom alert dialog -->
    <style name="alertDialogButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <!-- LISTS ACTIVITY -->
    <style name="listsButtons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="listName"> <!-- MODIFIED IN LANDSCAPE -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:text">@string/no_list_selected</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="listModifyButtons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- LIST VIEW FRAGMENT -->
    <style name="listsTopics">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">@dimen/list_points_weight</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- LIST VIEW FRAGMENT -->
    <style name="BasicButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <!-- TOPICS, TITLES & NOTES -->
    <style name="topics">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/title_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="titles" parent="topics">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="subtitles" parent="topics">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="notes">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <!-- Set each margin separately so they can be overridden -->
        <item name="android:layout_marginTop">@dimen/note_margin</item>
        <item name="android:layout_marginStart">@dimen/note_margin</item>
        <item name="android:layout_marginEnd">@dimen/note_margin</item>
        <item name="android:layout_marginBottom">@dimen/note_margin</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/note_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <!-- VOTE ACTIVITY -->
    <style name="voteButtons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="voteButtonsOnTop">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="voteTopic">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="voteInfo">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <!-- VOTE RESULTS ACTIVITY -->
    <style name="resultsItemValues">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="resultsItemPoints" parent="resultsItemValues">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="resultsTopicValues">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="resultsTopicPoints" parent="resultsTopicValues">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="resultsListAndItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">@dimen/results_list_margin</item>
        <item name="android:layout_marginEnd">@dimen/results_list_margin</item>
        <item name="android:padding">@dimen/results_list_padding</item>
    </style>

    <!-- SETTINGS ACTIVITY -->
    <style name="settingsSubtitles">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="settingsButtonsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="settingsButtons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textSize">15sp</item>
        <item name="android:onClick">settingSelected</item>
    </style>

    <style name="settingsOptionAdjustments">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="listSettingParameterName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:text">@string/first_vote</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="intValueLayoutNumbers">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@drawable/custom_bg</item>
    </style>

    <style name="intValueLayoutSign">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ThemeOverlay.MySwitchCompat" parent="">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

</resources>
